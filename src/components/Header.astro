---
import GithubButton from "./GithubButton.astro";
import MiniProgram from "./MiniProgram.astro";
import Logo from "./Logo.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header>
  <div class="flex justify-between items-center">
    <Logo />
    <div class="flex justify-between items-center">
      <MiniProgram />
      <GithubButton />
      <ThemeToggle />
    </div>
  </div>
  <div class="flex items-center mt-2">
    <span
      class="text-2xl text-transparent font-extrabold bg-clip-text bg-gradient-to-r from-sky-400 to-emerald-600"
      >ChatBot</span
    >
  </div>
  <p mt-1 op-60>Based on OpenAI API</p>
</header>
